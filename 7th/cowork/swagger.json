    "/signin":
    {
      "post":
      {
        "tags": [
          "sign"
        ],
        "summary": "로그인",
        "description": "email / pwd로 로그인합니다. Request : application/x-www-form-urlencoded",
        "operationId": "sign in",
        "consumes": [
          "application/json"
        ],
        "produces": [
          "application/xml",
          "application/json"
        ],
        "parameters": [
        {
          "in": "body",
          "name": "body",
          "description": "유저 로그인을 하기 위한 email, pwd 전달",
          "required": true,
          "schema":
          {
            "type": "object",
            "properties":
            {
              "email":
              {
                "description": "유저 email",
                "type": "string",
                "minLength": 1,
                "required": true,
                "example": "test@sopt.org"
              },
              "pwd":
              {
                "description": "로그인에 사용할 비밀번호",
                "type": "string",
                "minLength": 1,
                "required": true,
                "example": "qwer1234"
              }
            }
          }
        }],
        "responses":
        {
          "201":
          {
            "description": "로그인 성공",
            "schema":
            {
              "type": "object",
              "properties":
              {
                "status":
                {
                  "type": "string",
                  "description": "성공 알림",
                  "example": "success"
                },
                "data":
                {
                  "type": "object",
                  "properties":
                  {
                    "email":
                    {
                      "description": "사용자 email",
                      "type": "string",
                      "example": "test@sopt.org"
                    },
                    "nickname":
                    {
                      "description": "이용자가 등록한 닉네임",
                      "type": "string",
                      "example": "테스트"
                    },
                    "profile":
                    {
                      "description": "이용자의 프로필사진 url",
                      "type": "string",
                      "example": "profile image url"
                    }
                  }

                },
                "msg":
                {
                  "type": "string",
                  "description": "로그인 성공 알림메세지",
                  "example": "successful signin"
                }
              }
            }
          },
          "401":
          {
            "description": "find user data error // signin fail",
            "schema":
            {
              "$ref": "#/definitions/failMessage"
            }
          },
          "500":
          {
            "description": "get connection error // find user data error",
            "schema":
            {
              "$ref": "#/definitions/failMessage"
            }
          }
        }
      }
    },
    "/signup":
    {
      "post":
      {
        "tags": [
          "sign"
        ],
        "summary": "회원가입",
        "description": "사용자 회원가입을 합니다. Request : multipart/form-data",
        "operationId": "sign up",
        "consumes": [
          "multipart/form-data"
        ],
        "produces": [
          "application/xml",
          "application/json"
        ],
        "parameters": [
        {
          "in": "body",
          "name": "body",
          "description": "유저 회원가입을 하기 위한 email, pwd, nickname, profileImage 전달",
          "required": true,
          "schema":
          {
            "type": "object",
            "properties":
            {
              "email":
              {
                "description": "유저 email",
                "type": "string",
                "minLength": 1,
                "required": true,
                "example": "test@sopt.org"
              },
              "pwd":
              {
                "description": "비밀번호",
                "type": "string",
                "minLength": 1,
                "required": true,
                "example": "qwer1234"
              },
              "nickname":
              {
                "description": "유저 닉네임",
                "type": "string",
                "minLength": 1,
                "required": true,
                "example": "테스트"
              },
              "image":
              {
                "description": "유저의 프로필로 등록할 이미지파일",
                "required": true,
                "type": "image"
              }
            }
          }
        }],
        "responses":
        {
          "201":
          {
            "description": "이용자 회원가입 성공",
            "schema":
            {
              "type": "object",
              "properties":
              {
                "status":
                {
                  "type": "string",
                  "description": "성공 알림",
                  "example": "success"
                },
                "msg":
                {
                  "type": "string",
                  "description": "회원가입 성공 알림 메세지",
                  "example": "successful signup"
                }
              }
            }
          },
          "401":
          {
            "description": "email overlap",
            "schema":
            {
              "$ref": "#/definitions/failMessage"
            }
          },
          "500":
          {
            "description": "get connection error // get user data error // hash password error // insert user data error",
            "schema":
            {
              "$ref": "#/definitions/failMessage"
            }
          }
        }
      }
    },
